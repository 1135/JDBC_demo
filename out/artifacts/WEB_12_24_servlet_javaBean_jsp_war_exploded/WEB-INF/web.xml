<?xml version="1.0" encoding="UTF-8"?>
<web-app xmlns="http://xmlns.jcp.org/xml/ns/javaee"
         xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
         xsi:schemaLocation="http://xmlns.jcp.org/xml/ns/javaee http://xmlns.jcp.org/xml/ns/javaee/web-app_3_1.xsd"
         version="3.1">

    <servlet>
        <servlet-name>UpdateMessageServlet</servlet-name>
        <servlet-class>message.UpdateMessageServlet</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>UpdateMessageServlet</servlet-name>
        <url-pattern>/UpdateMessageServlet</url-pattern>
    </servlet-mapping>


    <servlet>
        <servlet-name>DelMessageServlet</servlet-name>
        <servlet-class>message.DelMessageServlet</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>DelMessageServlet</servlet-name>
        <url-pattern>/DelMessageServlet</url-pattern>
    </servlet-mapping>


    <servlet>
        <servlet-name>AddMessageServlet</servlet-name>
        <servlet-class>message.AddMessageServlet</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>AddMessageServlet</servlet-name>
        <url-pattern>/AddMessageServlet</url-pattern>
    </servlet-mapping>



    <servlet>
        <servlet-name>ViewMessageServlet</servlet-name>
        <servlet-class>message.ViewMessageServlet</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>ViewMessageServlet</servlet-name>
        <url-pattern>/ViewMessageServlet</url-pattern>
    </servlet-mapping>


</web-app>